<html>

  <head>
    <link href='http://fonts.googleapis.com/css?family=Faster+One' rel='stylesheet' type='text/css'>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <title>Solutionator</title>
    
    <link rel="stylesheet" href="stylesheets/foundation.min.css">
    <link rel="stylesheet" href="stylesheets/app.css">

    <script src="javascripts/modernizr.foundation.js"></script>

    <!-- IE Fix for HTML5 Tags -->
    <!--[if lt IE 9]>
      <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>


  <body>
    <div class="row">
      <div class="twelve columns centered">
        <h1>Solutionator</h1>
      </div>
    </div>

    <% if @puzzles.length > 0 %>
      <div class="row">
        <div class="twelve columns">
          <table>
            <thead>
              <tr>
                <th>Line number</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% @puzzles.each_with_index do |puzzle, index| %>
                <tr>
                  <td><span class="<%= puzzle.kind_of?(Sudoku::SolutionError) ? 'alert' : 'success' %> label"><%= index + 1 %></span></td>
                  <td><%= puzzle %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
    <div class="row">
      <div class="twelve columns">
        <form action="/check" method="POST">
          <textarea name="solutions" id="solutions" rows="20" cols="81" placeholder="Enter your solutions here ..." wrap="hard"><%= @solutions %></textarea>
          <br>
          <input type="submit" class="button" value="Solutionificate!">
        </form>
      </div>
    </div>
  </body>

</html>
